<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.merve.locationdemo.MainActivity">

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:text="GPS PROVIDER"
        android:onClick="startGPS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:text="NETWORK PROVIDER"
        android:onClick="startNetwork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:text="LAST KNOWN LOCATÄ°ON"
        android:onClick="showLastLoaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:text="STOP"
        android:onClick="showLastKnownLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
